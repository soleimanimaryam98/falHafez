<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:padding="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/rowtxtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام شاعر"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#0069C5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاریخ تولد : "
            android:textColor="#00ACC1"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/rowtxtbirthYearInLHijri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاریخ تولد"
            android:textColor="#051783"
            android:layout_marginTop="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="زادگاه :"
            android:textColor="#00ACC1"
            android:layout_marginTop="18dp"
            android:layout_marginRight="80dp"
            />

        <TextView
            android:id="@+id/rowtxtbirthPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="محل"
            android:textColor="#051783"
            android:layout_marginTop="18dp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاریخ تولد : "
            android:textColor="#00ACC1"
            android:layout_marginTop="18dp"/>


        <TextView
            android:id="@+id/rowtxtdeathYearInLHijri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text=" تاریخ تولد"
            android:textColor="#051783"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:background="#747EBC"/>


</LinearLayout>